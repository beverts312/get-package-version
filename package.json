{
  "name": "get-pkg-version",
  "description": "Lightweight utility for retrieving the version of globally installed npm packages",
  "version": "1.1.3",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/swellaby/get-package-version",
    "type": "git"
  },
  "author": {
    "name": "Swellaby",
    "email": "opensource@swellaby.com",
    "url": "http://swellaby.com"
  },
  "contributors": [
    {
      "name": "Bailey Everts",
      "url": "https://github.com/beverts312"
    },
    {
      "name": "Caleb Cartwright",
      "url": "https://github.com/calebcartwright"
    }
  ],
  "bugs": {
    "url": "https://github.com/swellaby/get-package-version/issues"
  },
  "main": "src/index.js",
  "bin": "bin/get-version.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "npm run coverage:enforce && npm run lint:build",
    "pretranspile": "rimraf src/**/*.js* bin/**/*.js* test/**/*.js test/**/*.js.map src/**/*.d.ts bin/**/*.d.ts test/**/*.d.ts",
    "transpile": "tsc",
    "tslint": "tslint -p tsconfig.json -c tslint.json -t stylish bin/**/*.ts src/**/*.ts test/**/*.ts",
    "eslint": "eslint **/*.js",
    "prelint": "tsc",
    "lint": "npm run tslint && npm run eslint",
    "lint:build": "npm run tslint && npm run eslint",
    "pretest": "rimraf .testresults .coverage",
    "test": "tsc && mocha --opts test/mocha.opts",
    "posttest": "replace-in-file --isRegex true \"/(.js)/g\" .ts .testresults/sonar.xml",
    "coverage": "nyc --check-coverage false npm test",
    "coverage:open": "npm run coverage && opn .coverage/unit/index.html",
    "coverage:enforce": "nyc npm test"
  },
  "devDependencies": {
    "@swellaby/eslint-config": "^1.1.6",
    "@swellaby/nyc-config": "^1.0.12",
    "@swellaby/tslint-config": "^1.1.4",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.5.0",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "eslint": "^5.0.0",
    "husky": "^1.0.0-rc.2",
    "mocha": "^5.2.0",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "replace-in-file": "^3.4.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
